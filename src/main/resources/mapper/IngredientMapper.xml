<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.IngredientMapper">

    <resultMap id="BaseResultMap" type="com.example.domain.Ingredient">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="repastId" column="repast_id" jdbcType="INTEGER"/>
        <result property="ingredientName" column="ingredient_name" jdbcType="VARCHAR"/>
        <result property="note" column="note" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,repast_id,ingredient_name,
        note
    </sql>
</mapper>
